<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<!-- Main container for the Product Management interface -->
<AnchorPane prefHeight="507.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escrimproject.ProduitController">
    <children>

        <!-- Title Label -->
        <Label layoutX="235.0" layoutY="8.0" text="Product Management">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <!-- Button Bar for CRUD Operations -->
        <ButtonBar layoutX="300.0" layoutY="460.0" prefHeight="40.0" prefWidth="380.0" style="-fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3);">
            <buttons>
                <Button fx:id="btnAdd" onAction="#Add" prefWidth="90.0" style="-fx-background-color: linear-gradient(to bottom, #2ecc71, #27ae60); -fx-text-fill: white;" text="Add" />
                <Button fx:id="btnUpdate" onAction="#Update" prefWidth="90.0" style="-fx-background-color: linear-gradient(to bottom, #f39c12, #d35400); -fx-text-fill: white;" text="Update" />
                <Button fx:id="btnDelete" onAction="#Delete" prefWidth="90.0" style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white;" text="Delete" />
            </buttons>
        </ButtonBar>

        <!-- Logout Button -->
        <Button fx:id="logoutButton" layoutX="23.0" layoutY="465.0" onAction="#handleLogout" text="Déconnexion" />

        <!-- Pane for Input Fields -->
        <Pane layoutX="23.0" layoutY="50.0" prefHeight="409.0" prefWidth="180.0" style="-fx-background-color: lightgrey;">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Nom" />
                <TextField fx:id="txtNom" layoutX="14.0" layoutY="40.0" prefHeight="26.0" prefWidth="158.0" />
                <Label layoutX="14.0" layoutY="80.0" text="Poids" />
                <TextField fx:id="txtPoids" layoutX="14.0" layoutY="106.0" prefHeight="26.0" prefWidth="158.0" />
                <Label layoutX="14.0" layoutY="146.0" text="Quantité" />
                <TextField fx:id="txtQuantite" layoutX="14.0" layoutY="172.0" prefHeight="26.0" prefWidth="158.0" />
                <Label layoutX="14.0" layoutY="212.0" text="DDP" />
                <DatePicker fx:id="dateDDP" layoutX="14.0" layoutY="238.0" prefHeight="26.0" prefWidth="158.0" />
                <Label layoutX="14.0" layoutY="278.0" text="Type" />
                <ComboBox fx:id="cmbType" layoutX="14.0" layoutY="304.0" prefHeight="26.0" prefWidth="158.0" />
                <Label layoutX="14.0" layoutY="344.0" text="Category" />
                <ComboBox fx:id="cmbCategory" layoutX="14.0" layoutY="370.0" prefHeight="26.0" prefWidth="158.0" />
            </children>
        </Pane>

        <!-- TableView for Displaying Products -->
        <TableView fx:id="table" layoutX="215.0" layoutY="50.0" prefHeight="409.0" prefWidth="465.0" style="-fx-background-color: lightgrey;">
            <columns>
                <TableColumn fx:id="IDColmn" prefWidth="35.0" text="ID" />
                <TableColumn fx:id="NomColmn" prefWidth="75.0" text="Nom" />
                <TableColumn fx:id="PoidsColmn" prefWidth="44.0" text="Poids" />
                <TableColumn fx:id="QuantiteColmn" prefWidth="61.0" text="Quantité" />
                <TableColumn fx:id="DDPColmn" prefWidth="77.0" text="DDP" />
                <TableColumn fx:id="TypeColmn" prefWidth="60.0" text="Type" />
                <TableColumn fx:id="IdCatColmn" prefWidth="112.0" text="Id_Catégorie" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
