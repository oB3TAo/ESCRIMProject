<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="516.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escrimproject.CommandeController">
    <children>
        <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 24px; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial';" text="Commande Management">
        </Label>
        <Pane layoutX="20.0" layoutY="50.0" prefHeight="200.0" prefWidth="860.0" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #d6e6f2; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.16), 10, 0, 0, 10);">
            <children>
                <TableView fx:id="table" layoutX="14.0" layoutY="14.0" prefHeight="172.0" prefWidth="832.0" style="-fx-font-family: 'Arial';">
                    <columns>
                        <TableColumn fx:id="idCommandeCol" prefWidth="100.0" text="ID Commande" />
                        <TableColumn fx:id="dateCommandeCol" prefWidth="133.0" text="Date Commande" />
                        <TableColumn fx:id="dateLivraisonPrevueCol" prefWidth="154.0" text="Date Livraison Prévue" />
                        <TableColumn fx:id="statutCommandeCol" prefWidth="119.0" text="Statut Commande" />
                        <TableColumn fx:id="montantTotalCol" prefWidth="119.0" text="Montant Total" />
                        <TableColumn fx:id="idFournisseurCol" prefWidth="111.0" text="ID Fournisseur" />
                        <TableColumn fx:id="idPersonnelCol" prefWidth="94.0" text="ID Personnel" />
                        <TableColumn fx:id="idProduitCol" prefWidth="170.0" text="ID Produit" />
                    </columns>
                </TableView>
            </children>
        </Pane>
        <Pane layoutX="20.0" layoutY="260.0" prefHeight="241.0" prefWidth="860.0" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #d6e6f2; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.16), 10, 0, 0, 10);">
            <children>
                <Label layoutX="14.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Date Commande:" />
                <DatePicker fx:id="txtDateCommande" layoutX="180.0" layoutY="10.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="400.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Date Livraison Prévue:" />
                <DatePicker fx:id="txtDateLivraisonPrevue" layoutX="580.0" layoutY="10.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="60.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Statut Commande:" />
                <TextField fx:id="txtStatutCommande" layoutX="180.0" layoutY="56.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="400.0" layoutY="60.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Montant Total:" />
                <TextField fx:id="txtMontantTotal" layoutX="580.0" layoutY="56.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="106.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="ID Fournisseur:" />
                <TextField fx:id="txtIdFournisseur" layoutX="180.0" layoutY="102.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="400.0" layoutY="106.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="ID Personnel:" />
                <TextField fx:id="txtIdPersonnel" layoutX="580.0" layoutY="102.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="152.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="ID Produit:" />
                <TextField fx:id="txtIdProduit" layoutX="180.0" layoutY="148.0" prefWidth="600.0" style="-fx-font-family: 'Arial';" />
                <!--- Buttons for actions -->
                <ButtonBar layoutX="133.0" layoutY="200.0" prefHeight="30.0" prefWidth="713.0">
                    <buttons>
                        <Button fx:id="btnAdd" onAction="#Add" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-font-family: 'Arial';" text="Add" />
                        <Button fx:id="btnUpdate" onAction="#Update" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #f39c12, #d35400); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-font-family: 'Arial';" text="Update" />
                        <Button fx:id="btnDelete" onAction="#Delete" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-font-family: 'Arial';" text="Delete" />
                    </buttons>
                </ButtonBar>
                  <Button fx:id="logoutButton" layoutX="14.0" layoutY="203.0" onAction="#handleLogout" text="Déconnexion" />
            </children>
        </Pane>
    </children>
</AnchorPane>
