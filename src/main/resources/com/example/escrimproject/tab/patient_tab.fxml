<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<!-- Main container for the Patient Management interface -->
<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escrimproject.PatientController">
    <children>
        <!-- Title Label for Patient Management -->
        <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 24px; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial';" text="Patient Management">
        </Label>

        <!-- Pane for Displaying Patients' Table -->
        <Pane layoutX="20.0" layoutY="50.0" prefHeight="200.0" prefWidth="860.0" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #d6e6f2; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.16), 10, 0, 0, 10);">
            <children>
                <TableView fx:id="table" layoutX="14.0" layoutY="14.0" prefHeight="172.0" prefWidth="832.0" style="-fx-font-family: 'Arial';">
                    <columns>
                        <!-- Columns setup with IDs and text titles -->
                        <TableColumn fx:id="IDColmn" prefWidth="47.0" text="ID" />
                        <TableColumn fx:id="NomColmn" prefWidth="73.0" text="Nom" />
                        <TableColumn fx:id="DateNaissanceColmn" prefWidth="124.0" text="Date de Naissance" />
                        <TableColumn fx:id="SexeColmn" prefWidth="48.0" text="Sexe" />
                        <TableColumn fx:id="SSNColmn" prefWidth="180.0" text="Numéro de Sécurité Sociale" />
                        <TableColumn fx:id="AdresseColmn" prefWidth="124.0" text="Adresse" />
                        <TableColumn fx:id="TelephoneColmn" prefWidth="91.0" text="Téléphone" />
                        <TableColumn fx:id="EmailColmn" prefWidth="142.0" text="Email" />
                        <TableColumn fx:id="TraitementColmn" prefWidth="221.0" text="Traitement en Cours" />
                        <TableColumn fx:id="DiagnosticColmn" prefWidth="150.0" text="Diagnostic" />
                        <TableColumn fx:id="StatutColmn" prefWidth="100.0" text="Statut" />
                        <TableColumn fx:id="IDPersonnelColmn" prefWidth="100.0" text="ID Personnel" />
                    </columns>
                </TableView>
            </children>
        </Pane>

        <!-- Input Pane for Patient Details -->
        <Pane layoutX="20.0" layoutY="260.0" prefHeight="344.0" prefWidth="860.0" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #d6e6f2; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.16), 10, 0, 0, 10);">
            <children>
                <!-- Input fields and labels -->
                <!-- Setup various input fields for patient details such as Name, Date of Birth, SSN, etc. -->
                <Label layoutX="14.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Nom:" />
                <TextField fx:id="txtNom" layoutX="120.0" layoutY="10.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="350.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Date de Naissance:" />
                <DatePicker fx:id="txtDateNaissance" layoutX="510.0" layoutY="10.0" prefWidth="230.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="60.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Sexe:" />
                <ComboBox fx:id="cmbSexe" layoutX="120.0" layoutY="56.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="350.0" layoutY="60.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Numéro SS:" />
                <TextField fx:id="txtSSN" layoutX="510.0" layoutY="56.0" prefWidth="230.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="106.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Adresse:" />
                <TextField fx:id="txtAdresse" layoutX="120.0" layoutY="102.0" prefWidth="210.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="350.0" layoutY="106.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Téléphone:" />
                <TextField fx:id="txtTelephone" layoutX="510.0" layoutY="102.0" prefWidth="230.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="152.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Email:" />
                <TextField fx:id="txtEmail" layoutX="120.0" layoutY="148.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="350.0" layoutY="152.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Traitement en Cours:" />
                <TextField fx:id="txtTraitement" layoutX="510.0" layoutY="148.0" prefWidth="230.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="198.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Diagnostic:" />
                <TextField fx:id="txtDiagnostic" layoutX="120.0" layoutY="194.0" prefWidth="620.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="14.0" layoutY="244.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="Statut:" />
                <ComboBox fx:id="cmbStatut" layoutX="120.0" layoutY="240.0" prefWidth="200.0" style="-fx-font-family: 'Arial';" />
                <Label layoutX="350.0" layoutY="244.0" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" text="ID Personnel:" />
                <TextField fx:id="txtIDPersonnel" layoutX="510.0" layoutY="240.0" prefWidth="230.0" style="-fx-font-family: 'Arial';" />
                <!-- Existing buttons -->
                <ButtonBar layoutX="112.0" layoutY="290.0" prefHeight="30.0" prefWidth="734.0">
                    <buttons>
                        <Button fx:id="btnAdd" onAction="#Add" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-font-family: 'Arial';" text="Add" />
                        <Button fx:id="btnUpdate" onAction="#Update" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #f39c12, #d35400); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-font-family: 'Arial';" text="Update" />
                        <Button fx:id="btnDelete" onAction="#Delete" prefWidth="100.0" style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-font-family: 'Arial';" text="Delete" />
                    </buttons>
                </ButtonBar>
                  <Button fx:id="logoutButton" layoutX="15.0" layoutY="293.0" onAction="#handleLogout" text="Déconnexion" />
            </children>
        </Pane>
    </children>
</AnchorPane>
